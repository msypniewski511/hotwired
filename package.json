{
  "name": "app",
  "private": true,
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "chokidar": "^4.0.3",
    "esbuild": "^0.25.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "tailwindcss": "3.3.2"
  },
  "scripts": {
    "_build": "esbuild app/javascript/application.js --bundle --sourcemap --outdir=app/assets/builds",
    "build": "node esbuild.config.js",
    "build:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --postcss",
    "dev": "npm-run-all --parallel watch:*",
    "watch:js": "esbuild app/javascript/application.js --bundle --sourcemap --outdir=app/assets/builds --watch",
    "watch:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --postcss --watch"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.13",
    "@tailwindcss/cli": "^4.1.6",
    "@tailwindcss/forms": "^0.5.10",
    "mrujs": "^1.0.2",
    "postcss-import": "^16.1.0",
    "stimulus": "npm:@hotwired/stimulus",
    "stimulus_reflex": "^3.5.3"
  }
}
